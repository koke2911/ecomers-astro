---
const url = new URL(Astro.request.url);
let myParam = url.searchParams.get("categoria");

if (myParam === null) {
    myParam = "";
}

let urlAPI = "https://dummyjson.com/products/category-list";

const response = await fetch(urlAPI);
const data = await response.json();
